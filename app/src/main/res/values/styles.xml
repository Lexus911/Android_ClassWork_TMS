<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Stroke_MaterialCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/teal_700</item>
        <item name="cardElevation">@null</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10.5dp</item>
        <item name="cornerSizeTopLeft">10.5dp</item>
        <item name="cornerSizeBottomRight">10.5dp</item>
        <item name="cornerSizeBottomLeft">10.5dp</item>
    </style>

    <style name="MyText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>
</resources>